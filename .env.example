# Copy this file to .env and fill values for local development
# Do NOT commit your real secrets to git. Use Streamlit Cloud Secrets for production.

# OpenAI for AI-driven summaries and cold emails
OPENAI_API_KEY=

# Optional: Google PageSpeed Insights API to fetch Core Web Vitals
GOOGLE_API_KEY=

# Optional: SQLAlchemy DB URL (set for production e.g., Heroku/Postgres)
# Example: postgresql+psycopg2://user:password@host:5432/dbname
DATABASE_URL=

# Optional SMTP configuration for email outreach
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# When using Streamlit Cloud, set these as Secrets in the Cloud UI instead of storing locally
